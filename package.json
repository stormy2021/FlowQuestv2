{
  "name": "flowquest",
  "version": "0.1.0",
  "description": "An experimental mobile interface for ServiceNow",
  "private": true,
  "workspaces": [
    "mobile",
    "backend",
    "shared"
  ],
  "scripts": {
    "dev": "concurrently \"npm run mobile:start\" \"npm run backend:start\"",
    "mobile:start": "cd mobile && npm start",
    "mobile:ios": "cd mobile && npm run ios",
    "mobile:android": "cd mobile && npm run android",
    "backend:start": "cd backend && npm start",
    "backend:build": "cd backend && npm run build",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint:mobile": "cd mobile && npm run lint",
    "lint:backend": "cd backend && npm run lint",
    "lint:shared": "cd shared && npm run lint",
    "type-check": "npm run type-check:mobile && npm run type-check:backend && npm run type-check:shared",
    "type-check:mobile": "cd mobile && npm run type-check",
    "type-check:backend": "cd backend && npm run type-check",
    "type-check:shared": "cd shared && npm run type-check",
    "test": "npm run test:mobile && npm run test:backend && npm run test:shared",
    "test:mobile": "cd mobile && npm test",
    "test:backend": "cd backend && npm test", 
    "test:shared": "cd shared && npm test",
    "clean": "npm run clean:mobile && npm run clean:backend && npm run clean:shared",
    "clean:mobile": "cd mobile && npm run clean",
    "clean:backend": "cd backend && npm run clean",
    "clean:shared": "cd shared && npm run clean",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:down": "docker-compose -f docker-compose.dev.yml down",
    "docker:logs": "docker-compose -f docker-compose.dev.yml logs -f",
    "setup": "npm install && npm run setup:mobile && npm run setup:backend",
    "setup:mobile": "cd mobile && npm install",
    "setup:backend": "cd backend && npm install",
    "setup:shared": "cd shared && npm install"
  },
  "devDependencies": {
    "@types/node": "^18.19.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/flowquest.git"
  },
  "keywords": [
    "servicenow",
    "mobile",
    "react-native",
    "itsm",
    "enterprise",
    "workflow"
  ],
  "author": "Brian Horning",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yourusername/flowquest/issues"
  },
  "homepage": "https://github.com/yourusername/flowquest#readme"
}